{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "lib": ["es6"],
    "outDir": "generators",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,  
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.{test,spec}.ts", "src/**/templates"]
}
