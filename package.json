{
  "name": "generator-nano-nodegen",
  "version": "0.1.0",
  "description": "A simple generator for scaffolding node.js apps",
  "author": "Ren√© Heinen<r.heinen@nanoGiants.de>",
  "files": [
    "generators"
  ],
  "keywords": [
    "yeoman-generator"
  ],
  "scripts": {
    "build": "rimraf ./generators && rimraf ./output && tsc",
    "start:dev": "npm run build && npm run copy:assets && npm link && mkdir output && cd output && yo nano-nodegen",
    "copy:assets": "sh scripts/copy_assets.sh",
    "test": "jest --runInBand",
    "test:cov": "jest --coverage --runInBand",
    "sonarqube:start": "docker-compose up -d",
    "sonarqube:stop": "docker-compose down",
    "sonarqube:report": "sh scripts/report_sonarqube.sh -k"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "validate-npm-package-name": "^3.0.0",
    "yeoman-generator": "^4.11.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.3",
    "@types/node": "^14.0.14",
    "@types/validate-npm-package-name": "^3.0.0",
    "@types/yeoman-assert": "^3.1.1",
    "@types/yeoman-generator": "^3.1.4",
    "@types/yeoman-test": "^2.0.4",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "eslint": "^7.3.1",
    "eslint-plugin-import": "^2.22.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.6",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^2.6.0"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint . --fix",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
